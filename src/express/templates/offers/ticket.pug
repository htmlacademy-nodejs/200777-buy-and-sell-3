extends ../layout.pug

block content
  -
    const formatDate = (dateString) => {
      const date = new Date(dateString);
      return date.toLocaleDateString();
    }
  main.page-content
    section.ticket
      .ticket__wrapper
        h1.visually-hidden Карточка объявления
        .ticket__content
          .ticket__img
            +insertOfferImage(oneOffer)
          .ticket__info
            h2.ticket__title #{oneOffer.title}
            .ticket__header
              p.ticket__price
                span.js-sum #{oneOffer.sum}
                |  ₽
              p.ticket__action #{oneOffer.type === `offer` ? `КУПЛЮ` : `ПРОДАМ`}
            .ticket__desc
              p #{oneOffer.description}
            .ticket__data
              p
                b Дата добавления:
                span #{formatDate(oneOffer.createdAt)}
              p
                b Автор:
                a(href='#') #{oneOffer.users.name} 
              p
                b Контакты:
                a(href=`mailto:${oneOffer.users.email}`) #{oneOffer.users.email}
            ul.ticket__tags
              each category of oneOffer.categories
                li
                  a.category-tile.category-tile--small(href='#')
                    span.category-tile__image
                      +categoryImage(category)
                    span.category-tile__label #{category.name}
        .ticket__comments
          h2.ticket__subtitle Коментарии
          .ticket__comment-form
            form.form.comment-form(action=`/offers/${id}/comments` method='post' enctype='application/x-www-form-urlencoded'
             autocomplete='off')
              input(type='hidden' name='_csrf' value=csrfToken)
              .comment-form__header
                a.comment-form__avatar.avatar(href='#')
                  img(src=user alt='Аватар пользователя')
                p.comment-form__author Вам слово
              .comment-form__field
                .form__field
                  textarea#comment-field.js-field(name='comment' cols='30' rows='10' maxlength='400' minlength='50') Нормальное вообще кресло! А как насч
                  label(for='comment-field') Текст комментария
                  span Обязательное поле
              +insertErrorMessages(validationMessages)
              button.comment-form__button.btn.btn--white.js-button(type='submit' disabled='') Отправить
          .ticket__comments-list
            ul.comments-list
              each comment of oneOffer.comments
                li
                  .comment-card
                    .comment-card__header
                      a.comment-card__avatar.avatar(href='#')
                        img(src=`/img/${comment.users.avatar}` alt='Аватар пользователя')
                      p.comment-card__author #{comment.users.name}
                    .comment-card__content
                      p #{comment.text}
