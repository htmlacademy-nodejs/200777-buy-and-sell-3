extends layout.pug

block content
  main.page-content
    section.search-results
      h1.visually-hidden Результаты поиска
      .search-results__wrapper
        if (result.length === 0)
          include partials/search-empty.pug
        else
          p.search-results__label
            | Найдено
            span.js-results #{results.length} публикаций
          ul.search-results__list
            each itemOffer of result
              li.search-results__item
                include partials/offer-card.pug
  if (allOffers.recent.length > 0)
    include partials/offers-newest.pug
